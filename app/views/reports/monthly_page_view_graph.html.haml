:javascript
  $(function(){
    
    // Make the 'page_view_plot' div a highchart showing the total view counts.
    var chart;
    chart = new Highcharts.Chart({
      chart: {
        renderTo: 'page_view_plot',
        defaultSeriesType: 'column',
        marginRight: 130,
        marginBottom: 85
      },
      title: false,
      legend: {
        enabled: true
      },
      xAxis: {
        type: 'datetime',
        tickInterval: #{1.day * 1000},
        tickPosition: "inside",
        labels: {
          formatter: function() {
            return Highcharts.dateFormat("%e", this.value);
          }
        }
      },
      yAxis: {
        title: false,
        min: 0
      },
      tooltip: {
        formatter: function() {
          return Highcharts.dateFormat("%B %e %Y", this.x) + ': ' + this.y;
        }
      },
      series: [
      {
        name: 'Last Month',
        pointInterval: #{1.day * 1000},
        pointStart: #{@this_start_date.at_midnight.to_i * 1000},
        data: #{@view_counts_last_month.inspect}
      },
      {
        name: 'This Month',
        pointInterval: #{1.day * 1000},
        pointStart: #{@this_start_date.at_midnight.to_i * 1000},
        data: #{@view_counts_this_month.inspect},
        type: 'line'
      }
      ]
      
    });

  });

